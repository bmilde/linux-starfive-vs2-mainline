+		dc_set_clear(hw, DC_FRAMEBUFFER_CONFIG_EX + offset,
+			     PRIMARY_DECODER_EN(false) |
+			     PRIMARY_EN(visible) |
+			     PRIMARY_ZPOS(zpos) |
+			     PRIMARY_CHANNEL(display_id),
+			     PRIMARY_DECODER_EN_EN_MASK |
