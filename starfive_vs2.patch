+			dc_set_clear(hw, DC_FRAMEBUFFER_CONFIG_EX + offset,
+				     PRIMARY_YUVCLAMP_EN, PRIMARY_RGB2RGB_EN);
+		else
+			dc_set_clear(hw, DC_OVERLAY_CONFIG + offset,
